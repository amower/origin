<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8' />
        <title>Books</title>
    </head>
    <body>
        <% @account.all do |row| %>
        
        <a href="/home/">Home</a>
        <a href="/accounts/<%= row[:account_id] %>">Account</a>
        <a href="/dashboard/<%= row[:account_id] %>">Dashboard</a>
        <a href="/activities/<%= row[:account_id] %>">Activities</a>
        <a href="/books/<%= row[:account_id] %>">Books</a>
        <a href="/subjects/<%= row[:account_id] %>">Subjects</a>
        
        <h1>Books</h1>
        
        <h3><strong>2017</strong></h3>
        
        <ol>
        <% @books.where(Sequel.like(:finish_date, "2017%")).each do |row| %>
            <li>
                <a href="/books/<%= row[:account_id] %>/<%= row[:book_id] %>"><%= row[:title] %></a>, by <a href="/books/author/<%= row[:account_id] %>/<%= row[:author] %>"><%= row[:author] %></a>, Finished on <%= row[:finish_date] %>, Rated <%= row[:rating] %> stars
                <a href="">
                    <% if(row[:fiction]) %>
                        <%= "Fiction" %>
                    <% else %>
                        <%= "Nonfiction" %>
                    <% end %>
                </a>
            </li>
        <% end %>
        </ol>
        
        <h3><strong>2016</strong></h3>
        
        <ol>
        <% @books.where(Sequel.like(:finish_date, "2016%")).each do |row| %>
            <li>
                <a href="/books/<%= row[:account_id] %>/<%= row[:book_id] %>"><%= row[:title] %></a>, by <a href="/books/author/<%= row[:account_id] %>/<%= row[:author] %>"><%= row[:author] %></a>, Finished on <%= row[:finish_date] %>, Rated <%= row[:rating] %> stars
                <a href="">
                    <% if(row[:fiction]) %>
                        <%= "Fiction" %>
                    <% else %>
                        <%= "Nonfiction" %>
                    <% end %>
                </a>
            </li>
        <% end %>
        </ol>
        
        <a href="/books/new/<%= row[:account_id] %>">Add New Book</a><br>
        
        <% end %>
        
    </body>
</html>