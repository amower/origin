<!--Access account data-->
<% @account.all do |i| %>        
    
    <!--Target the 'sort' author-->
    <% books_array = @books.to_a %>
    <% author = books_array[0].author %>
    <h3>Books by <%= author %></h3>
    
    <ol reversed><!--List all books by selected author-->
        <% @books.each do |b| %>
        
        <li>
            <!--Linked title-->
            <a href="/books/<%= b.account_id %>/<%= b.pk %>"><%= b.title %></a>, 
            <!--Author-->
            by <%= b.author %>, 
            
            <!--Finished date-->
            read in <%= b.finish_date.month %>/<%= b.finish_date.year %> 
        </li>
        
        <% end %><!--End books by selected author loop-->
    </ol>
    
    <!--Link to add new book-->
    <a href="/books/new/<%= i.pk %>">Add New Book</a><br>
    
<% end %><!--End account data access-->
   