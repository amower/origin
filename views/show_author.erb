<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8' />
        <title>Author Page</title>
    </head>
    <body>
        <% @books.all do |b| %>
        
        <a href="/home/">Home</a>
        <a href="/accounts/<%= b.account_id %>">Account</a>
        <a href="/dashboard/<%= b.account_id %>">Dashboard</a>
        <a href="/activities/<%= b.account_id %>">Activities</a>
        <a href="/books/<%= b.account_id %>">Books</a>
        <a href="/subjects/<%= b.account_id %>">Subjects</a>
        
        <h1>Books by <%= b.author %></h1>
        
        <ol>
            <li>
                <a href="/books/<%= b.account_id %>/<%= b.pk %>"><%= b.title %></a>, by <%= b.author %>, Finished on <%= b.finish_date %>, Rated <%= b.rating %> stars -- 
                    <% if(b.fiction) %>
                        <%= "Fiction" %>
                    <% else %>
                        <%= "Nonfiction" %>
                    <% end %>
                </a>
            </li>
        </ol>
        
        <a href="/books/new/<%= b.account_id %>">Add New Book</a><br>
        
        <% end %>
        
    </body>
</html>