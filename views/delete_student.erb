<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8' />
        <title>Delete Student</title>
    </head>
    <body>
        <% @account.all do |row| %>
        
        <a href="/home/">Home</a>
        <a href="/accounts/<%= row[:account_id] %>">Account</a>
        <a href="/dashboard/<%= row[:account_id] %>">Dashboard</a>
        <a href="/activities/<%= row[:account_id] %>">Activities</a>
        <a href="/books/<%= row[:account_id] %>">Books</a>
        <a href="/subjects/<%= row[:account_id] %>">Subjects</a>
        
        <h1>Delete Student</h1>
        
        <% @student.all do |row| %>
        <h3>Deleting <%= row[:stud_first_name] %> from your account will delete <%= row[:stud_first_name] %> from all activities and books.</h3>
        
        <h3>Are you sure you want to delete <%= row[:stud_first_name] %>?</h3>
        
        <form method="post" action="/students/delete/<%= row[:account_id] %>/<%= row[:student_id] %>">
            <table>   
                <tr>
                    <td><label for="submit">Delete Student</label></td>
                    <td><input type="submit"></td>
                </tr>
            </table>
        </form>
        <% end %>
        
        <% end %>
    </body>
</html>