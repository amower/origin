<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8' />
        <title>Delete Student</title>
    </head>
    <body>
        <% @account.all do |i| %>
        
        <a href="/home/">Home</a>
        <a href="/accounts/<%= i.pk %>">Account</a>
        <a href="/dashboard/<%= i.pk %>">Dashboard</a>
        <a href="/activities/<%= i.pk %>">Activities</a>
        <a href="/books/<%= i.pk %>">Books</a>
        <a href="/subjects/<%= i.pk %>">Subjects</a>
        
        <h1>Delete Student</h1>
        
        <% @student.all do |s| %>
        <h3>Deleting <%= s.stud_first_name %> from your account will delete <%= s.stud_first_name %> from all activities and books.</h3>
        
        <h3>Are you sure you want to delete <%= s.stud_first_name %>?</h3>
        
        <form method="post" action="/students/delete/<%= s.account_id %>/<%= s.pk %>">
            <table>   
                <tr>
                    <td><label for="submit">Delete Student</label></td>
                    <td><input type="submit"></td>
                </tr>
            </table>
        </form>
        <% end %><!--End student loop-->
        
        <% end %><!--End account data access-->
    </body>
</html>