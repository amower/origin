<!--Access activity data-->

<% @activity.each do |a| %>
     
    <!--Activity title-->    
    <h2><%= a.title %></h2>
    
    <!--List students who participated in the activity-->
    <h2>Student(s): <% @students.each do |s| %>
        <%= s.stud_first_name %>
        <% end %></h2><!--End to students loop-->
    
    <!--Table to display activity info-->
    <table>
        <tr>
            <td><strong>Date of Activity:</strong></td>
            <td><%= a.activity_date.month %>/<%= a.activity_date.day %>/<%= a.activity_date.year %></td>
        </tr>
        <tr>
            <td><strong>Duration:</strong></td>
            <td><!--Format activity duration verbage-->
                <% if(a.duration < 60) %>
                    <%= a.duration %> Minutes
                <% elsif(a.duration === 60) %>
                    <%= a.duration / 60 %> Hour
                <% elsif(a.duration > 60 && a.duration / 60 === 1) %>
                    <%= a.duration / 60 %> Hour <%= a.duration % 60 %> Minutes
                <% elsif(a.duration > 60 && a.duration % 60 === 0) %>
                    <%= a.duration / 60 %> Hours
                <% else %>
                    <%= a.duration / 60 %> Hours <%= a.duration % 60 %> Minutes
                <% end %></td>
        </tr>
        <tr>
            <!--List each subject tied to activity-->
            <td><strong>Subject(s):</strong></td>
            <% @subjects.each do |j| %>
            <td><%= j.subject_name %></td>
            <% end %><!--End to subjects loop-->
        </tr>
        <tr>
            <td><strong>Description:</strong></td>
            <td><%= a.description %></td>
        </tr>
    </table>
    
    <br>
    
    <!--Link to edit activity-->
    <a href="/activities/update/<%= a.account_id %>/<%= a.pk %>">Edit Activity</a><br>
    
    <!--Link to delete activity-->
    <a href="/activities/change/<%= a.account_id %>/<%= a.pk %>">Delete Activity</a><br>
    
    <!--Link to portfolio of each student who participated in activity--> 
    <h3><% @students.each do |s| %>
        <a href="/portfolio/<%= s.account_id %>/<%= s.pk %>">View <%= s.stud_first_name %>'s Portfolio</a><br>
        <% end %></h3><!--End to students loop-->
    
<% end %><!--End activity data access-->
        
