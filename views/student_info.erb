<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8' />
        <% @student.all do |s| %>
        <title><%= s.stud_first_name %></title>
    </head>
    <body>
        
        <a href="/home/">Home</a>
        <a href="/accounts/<%= s.account_id %>">Account</a>
        <a href="/dashboard/<%= s.account_id %>">Dashboard</a>
        <a href="/activities/<%= s.account_id %>">Activities</a>
        <a href="/books/<%= s.account_id %>">Books</a>
        <a href="/subjects/<%= s.account_id %>">Subjects</a>
        
        <h1><%= s.stud_first_name %> <%= s.stud_last_name %></h1>
        
        <table>
            <tr>
                <td><strong>Age:</strong></td>
                <!--Calculate age-->
                <% age = Date.today.year - s.birth_date.year %>
                <% age -= 1 if Date.today.month < s.birth_date.month || (Date.today.month == s.birth_date.month && Date.today.day < s.birth_date.day) %>
                <td><%= age %></td>
            </tr>
            <tr>
                <td><strong>Birthday:</strong></td>
                <td><%= s.birth_date.month %>-<%= s.birth_date.day %>-<%= s.birth_date.year %></td>
            </tr>
            <tr>
                <td><strong>Join Date:</strong></td>
                <td><%= s.enroll_date.month %>-<%= s.enroll_date.day %>-<%= s.enroll_date.year %></td>
            </tr>
            <tr><% @account.all do |i| %>
                <td><strong>Account Holder:</strong></td>
                <td><%= i.acct_first_name %> <%= i.acct_last_name %></td>
                <% end %><!--End account data access-->
            </tr>
        </table>
    
        <a href="/portfolio/<%= s.account_id %>/<%= s.pk %>">Go to <%= s.stud_first_name %>'s Portfolio</a><br>
            
        <% end %><!--End student data access-->
    </body>
</html>