<!--Access student data-->
<% @student.all do |s| %>
        
    <!--Page Title-->
    <h2><%= s.stud_first_name %>'s Books by <% @books.all do |b| %><%= b.author %><% end %></h2>
    
    <!--List books by certain author, read by certain student-->
    <ol>
        <% @books.each do |b| %>
        <li>
            <!--Link title-->
            <a href="/books/<%= b.account_id %>/<%= b.pk %>"><%= b.title %></a>, 
            <!--List author-->
            by <%= b.author %>. 
            
            <!--Formatted finish date-->
            Finished on <%= b.finish_date.month %>/<%= b.finish_date.day %>. 
            
            <!--Rating-->
            Rated <%= b.rating %> stars
            
            <!--Fiction/Nonfiction-->
            <% if(b.fiction) %>
                <%= "Fiction" %>
            <% else %>
                <%= "Nonfiction" %>
            <% end %>
            </a>
        </li>
        <% end %><!--End book loop-->
    </ol>
    
    <!--Link to add new book-->
    <a href="/books/new/<%= s.account_id %>">Add New Book</a><br>
        
<% end %><!--End student data access-->
        