<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8' />
        <title>Update Account</title>
    </head>
    <body>
        <% @account.all do |row| %>
        
        <a href="/home/">Home</a>
        <a href="/accounts/<%= row[:account_id] %>">Account</a>
        <a href="/dashboard/<%= row[:account_id] %>">Dashboard</a>
        <a href="/activities/<%= row[:account_id] %>">Activities</a>
        <a href="/books/<%= row[:account_id] %>">Books</a>
        <a href="/subjects/<%= row[:account_id] %>">Subjects</a>
        
        <h1>Update Account</h1>
        
        <form method="post" action="/accounts/create/<%= row[:account_id] %>">
            <table>
                <tr>
                    <td><label for="acct_first_name">First Name:</label></td>
                    <td><input type="text" name="acct_first_name" value="<%= row[:acct_first_name] %>"></td>
                </tr>
                <tr>
                    <td><label for="acct_last_name">Last Name:</label></td>
                    <td><input type="text" name="acct_last_name" value="<%= row[:acct_last_name] %>"></td>
                </tr>
                <tr>
                    <td><label for="zipcode">Zipcode:</label></td>
                    <td><input type="text" name="zipcode" value="<%= row[:zipcode] %>"></td>
                </tr>
                <tr>
                    <td><label for="email">Email:</label></td>
                    <td><input type="text" name="email" value="<%= row[:email] %>"></td>
                </tr>
                <tr>
                    <td><label for="password">Password:</label></td>
                    <td><input type="password" name="password" value="<%= row[:password] %>" maxlength="10"></td>
                </tr>
                <tr>
                    <td><input type="submit"></td>
                </tr>
            </table>
        </form>
        
        <% end %>
        
    </body>
</html>