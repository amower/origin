<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8' />
        <title>Update Account</title>
    </head>
    <body>
        <!--Access account data-->
        <% @account.all do |i| %>
        
        <!--MENU-->
        <a href="/home/">Home</a>
        <a href="/accounts/<%= i.pk %>">Account</a>
        <a href="/dashboard/<%= i.pk %>">Dashboard</a>
        <a href="/activities/<%= i.pk %>">Activities</a>
        <a href="/books/<%= i.pk %>">Books</a>
        <a href="/subjects/<%= i.pk %>">Subjects</a>
        
        <h1>Update Account</h1>
        
        <!--Form prefilled with current account data-->
        <form method="post" action="/accounts/create/<%= i.pk %>">
            <table>
                <tr>
                    <td><label for="acct_first_name">First Name:</label></td>
                    <td><input type="text" name="acct_first_name" value="<%= i.acct_first_name %>"></td>
                </tr>
                <tr>
                    <td><label for="acct_last_name">Last Name:</label></td>
                    <td><input type="text" name="acct_last_name" value="<%= i.acct_last_name %>"></td>
                </tr>
                <tr>
                    <td><label for="zipcode">Zipcode:</label></td>
                    <td><input type="text" name="zipcode" value="<%= i.zipcode %>"></td>
                </tr>
                <tr>
                    <td><label for="email">Email:</label></td>
                    <td><input type="text" name="email" value="<%= i.email %>"></td>
                </tr>
                <tr>
                    <td><label for="password">Password:</label></td>
                    <td><input type="password" name="password" value="<%= i.password %>" maxlength="10"></td>
                </tr>
                <tr>
                    <td><input type="submit"></td>
                </tr>
            </table>
        </form>
        
        <% end %><!--End account data access-->
        
    </body>
</html>