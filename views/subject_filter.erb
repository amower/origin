<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8' />
        <title>Subject Filter</title>
    </head>
    
    <body>
        <% @account.all do |row| %>
        
        <a href="/home/">Home</a>
        <a href="/accounts/<%= row[:account_id] %>">Account</a>
        <a href="/dashboard/<%= row[:account_id] %>">Dashboard</a>
        <a href="/activities/<%= row[:account_id] %>">Activities</a>
        <a href="/books/<%= row[:account_id] %>">Books</a>
        <a href="/subjects/<%= row[:account_id] %>">Subjects</a>
        
        <% end %>
        
        <% @subject.each do |row| %> 
            <h1><%= row[:subject_name] %> Activities</h1>
            
            <ol><% @activities.each do |row| %>
                <li>
                    <a href="/activities/<%= row[:account_id] %>/<%= row[:activity_id] %>"><%= row[:activity_date] %>: <%= row[:title] %>, 
                        <% @students.where(Sequel[:activities_students][:activity_id] => row[:activity_id]).each do |row| %>
                            (<%= row[:stud_first_name] %>)
                        <% end %>
                        <%= row[:duration] %> minutes</a>
                </li>
                <% end %>
            </ol><br>
            
            <h1><%= row[:subject_name] %> Books</h1>
            
            <ol><% @books.each do |row| %>
                <li>
                    <a href="/books/<%= row[:account_id] %>/<%= row[:book_id] %>"><%= row[:title] %> by <%= row[:author] %>, Finished <%= row[:finish_date] %>
                        <% @book_students.where(Sequel[:books_students][:book_id] => row[:book_id]).each do |row| %>
                            (<%= row[:stud_first_name] %>)
                        <% end %></a>
                </li>
                <% end %>
            </ol><br>
            
        <% end %>
        
    </body>
</html>