<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8' />
        <title>My Dashboard</title>
    </head>
    <body>
        <% @account.all do |i| %>
        
        <a href="/home/">Home</a>
        <a href="/accounts/<%= i.pk %>">Account</a>
        <a href="/dashboard/<%= i.pk %>">Dashboard</a>
        <a href="/activities/<%= i.pk %>">Activities</a>
        <a href="/books/<%= i.pk %>">Books</a>
        <a href="/subjects/<%= i.pk %>">Subjects</a>
        
        <h3>Welcome Back, <%= i.acct_first_name %>!</h3>
        
        <h1>My Dashboard</h1>
        
        <h3>Student Portfolios:
        <% @students.each do |s| %>
            <a href="/portfolio/<%= s.account_id %>/<%= s.pk %>"><%= s.stud_first_name %></a>
        <% end %><!--End student loop-->
        </h3> 
        
        <p><strong>Recent Activities:</strong></p>
        
        <ol><% @activities.each do |a| %>
            <li>
                <a href="/activities/<%= a.account_id %>/<%= a.pk %>"><%= a.title %></a>, 
                    <% @activity_subjects.where(:activity_id => a.pk).each do |aj| %>
                        (<%= aj.subject_name %>)
                    <% end %>
                    <%= a.activity_date %> (<a href="/activities/update/<%= a.account_id %>/<%= a.pk %>">Edit</a>) (<a href="/activities/change/<%= a.pk %>">Delete</a>)
            </li><% end %><!--End activity loop-->
        </ol>
        
        <a href="/activities/new/<%= i.pk %>">Add New Activity</a><br><br>
        
        <p><strong>Recent Books:</strong></p>
        
        <ol><% @books.each do |b| %>
            <li>
                <a href="/books/<%= b.account_id %>/<%= b.pk %>"><%= b.title %></a>, written by <a href="/books/author/<%= b.account_id %>/<%= b.author %>"><%= b.author %></a>, Finish Date: <%= b.finish_date %> (<a href="/books/update/<%= b.account_id %>/<%= b.pk %>">Edit</a>) (<a href="/books/change/<%= b.pk %>">Delete</a>)
            </li><% end %><!--End book loop-->
        </ol>
        
        <a href="/books/new/<%= i.pk %>">Add New Book</a><br><br>
        
        <% end %><!--End account data access-->
    </body>
</html>