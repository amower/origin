<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8' />
        <title>MyDashboard</title>
    </head>
    <body>
        <% @account.all do |row| %>
        
        <a href="/home/">Home</a>
        <a href="/accounts/<%= row[:account_id] %>">Account</a>
        <a href="/dashboard/<%= row[:account_id] %>">Dashboard</a>
        <a href="/activities/<%= row[:account_id] %>">Activities</a>
        <a href="/books/<%= row[:account_id] %>">Books</a>
        <a href="/subjects/<%= row[:account_id] %>">Subjects</a>
        
        <h3>Welcome Back, <%= row[:acct_first_name] %>!</h3>
        
        <h1>My Dashboard</h1>
        
        <h3>Student Portfolios:
        <% @students.each do |row| %>
            <a href="/portfolio/<%= row[:account_id] %>/<%= row[:student_id] %>"><%= row[:stud_first_name] %></a>
        <% end %>
        </h3> 
        
        <p><strong>Recent Activities:</strong></p>
        
        <ol><% @activities.each do |row| %>
            <li>
                <a href="/activities/<%= row[:account_id] %>/<%= row[:activity_id] %>"><%= row[:title] %></a>, 
                    <% @activity_subjects.where(:activity_id => row[:activity_id]).each do |row| %>
                        (<%= row[:subject_name] %>)
                    <% end %>
                    <%= row[:activity_date] %> (<a href="/activities/update/<%= row[:account_id] %>/<%= row[:activity_id] %>">Edit</a>) (<a href="/activities/change/<%= row[:activity_id] %>">Delete</a>)
            </li><% end %>
        </ol>
        
        <a href="/activities/new/<%= row[:account_id] %>">Add New Activity</a><br><br>
        
        <p><strong>Recent Books:</strong></p>
        
        <ol><% @books.each do |row| %>
            <li>
                <a href="/books/<%= row[:account_id] %>/<%= row[:book_id] %>"><%= row[:title] %></a>, written by <a href="/books/author/<%= row[:account_id] %>/<%= row[:author] %>"><%= row[:author] %></a>, Finish Date: <%= row[:finish_date] %> (<a href="/books/update/<%= row[:account_id] %>/<%= row[:book_id] %>">Edit</a>) (<a href="/books/change/<%= row[:book_id] %>">Delete</a>)
            </li><% end %>
        </ol>
        
        <a href="/books/new/<%= row[:account_id] %>">Add New Book</a><br><br>
        
        <% end %>
    </body>
</html>