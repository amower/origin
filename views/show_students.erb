<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8' />
        <title>Students</title>
    </head>
    <body>
        <% @account.all do |i| %>
        
        <a href="/home/">Home</a>
        <a href="/accounts/<%= i.pk %>">Account</a>
        <a href="/dashboard/<%= i.pk %>">Dashboard</a>
        <a href="/activities/<%= i.pk %>">Activities</a>
        <a href="/books/<%= i.pk %>">Books</a>
        <a href="/subjects/<%= i.pk %>">Subjects</a>
        
        <h1>Manage Students</h1>
        
        <ol>
        <% @students.each do |s| %>
            <li>
                <p><a href="/students/<%= s.account_id %>/<%= s.pk %>"><%= s.stud_first_name %></a> (<a href="/students/update/<%= s.pk %>">Edit</a>) (<a href="/students/change/<%= s.account_id %>/<%= s.pk %>">Delete</a>)
                </p>
            </li>
        <% end %><!--End students loop-->
        </ol>
        
        <a href="/students/new/<%= i.pk %>">Add New Student</a><br>
        
        <% end %>
        
    </body>
</html>