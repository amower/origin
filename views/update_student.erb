<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8' />
        <title>Update Student</title>
    </head>
    <body>
        <% @student.all do |row| %>
        
        <a href="/home/">Home</a>
        <a href="/accounts/<%= row[:account_id] %>">Account</a>
        <a href="/dashboard/<%= row[:account_id] %>">Dashboard</a>
        <a href="/activities/<%= row[:account_id] %>">Activities</a>
        <a href="/books/<%= row[:account_id] %>">Books</a>
        <a href="/subjects/<%= row[:account_id] %>">Subjects</a>
        
        <h1>Update Student</h1>
        
        <form method="post" action="/students/create/<%= row[:account_id] %>/<%= row[:student_id] %>">
            <table>
                <tr>
                    <td><label for="stud_first_name">First Name:</label></td>
                    <td><input type="text" name="stud_first_name" value="<%= row[:stud_first_name] %>"></td>
                </tr>
                <tr>
                    <td><label for="stud_last_name">Last Name:</label></td>
                    <td><input type="text" name="stud_last_name" value="<%= row[:stud_last_name] %>"></td>
                </tr>
                <tr>
                    <td><label for="birth_date">Birth Date:</label></td>
                    <td><input type="date" name="birth_date" value="<%= row[:birth_date] %>"></td>
                </tr>
                <tr>
                    <td><input type="submit"></td>
                </tr>
            </table>
        </form>
        
        <% end %>
        
    </body>
</html>