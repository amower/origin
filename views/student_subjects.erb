<!--Access student data-->
<% @student.all do |s| %>        
        
    <h2><%= s.stud_first_name %>'s <% @subject.all do |j| %><%= j.subject_name %><% end %> Activities</h2>
    
    <!--List student activities under selected subject-->
    <ol reversed><% @activities.each do |a| %>
        <li>
            <!--Linked activity title-->
            <a href="/activities/<%= a.account_id %>/<%= a.pk %>"> <%= a.title %></a>
            
            <!--Activity date-->
            on <%= a.activity_date.month %>/<%= a.activity_date.day %>/<%= a.activity_date.year %>
            
            <!--List of subjects associated with the activity-->
            <%# Subject.association_join(:activities_subjects).where(:activity_id => a.pk).each do |j| %>
                <%#= j.subject_name %>
            <%# end %>
            
            <!--Format activity duration verbage-->
            <!--
            <%# if(a.duration < 60) %>
                <%#= a.duration %> minutes
            <%# elsif(a.duration === 60) %>
                <%#= a.duration / 60 %> hour
            <%# else %>
                <%#= a.duration / 60 %> hours
            <%# end %>
            -->
        </li>
    <% end %><!--End activity loop-->
    </ol>
    
    <h2><%= s.stud_first_name %>'s <% @subject.all do |j| %><%= j.subject_name %><% end %> Books</h2>
    
    <!--List all student books under selected subject-->
    <ol reversed><% @books.each do |b| %>
        <li>
            <!--Linked book title-->
            <a href="/books/<%= b.account_id %>/<%= b.pk %>"><%= b.title %><%= b.subtitle %></a>
            
            <!--Linked author-->
            <a href="/books/author/<%= b.account_id %>/<%= s.pk %>/<%= b.last_name %>"><%= b.prefix %><%= b.first_name %><%= b.middle_name %><%= b.last_name %><%= b.suffix %></a>
            
            <!--Date book finished-->
            <%= b.finish_date.month %>/<%= b.finish_date.year %>
        </li>
    <% end %><!--End book loop-->
    </ol>
    
<% end %><!--End student data access-->