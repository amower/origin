<!--Access subject data-->

<% @subject.all do |j| %>    
    
    <h1>Delete Subject</h1>
    
    <!--Warning message-->
    <p>Deleting '<%= j.subject_name %>' from your account will delete the subject from all activities and books.</p>
    
    <h3>Are you sure you want to delete '<%= j.subject_name %>'?</h3>
    
    <!--Button to delete the subject-->
    <form method="post" action="/subjects/delete/<%= j.account_id %>/<%= j.subject_id %>">
        <table>   
            <tr>
                <td><label for="submit">Delete Subject</label></td>
                <td><input type="submit"></td>
            </tr>
        </table>
    </form>
    
<% end %><!--End subject data access-->