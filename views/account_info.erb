<!--Access account data-->

<% @account.all do |i| %>

    <!--You can read record values as object attributes if attribute names are valid columns in the dataset (i.e. row.account_id). If attribute names are not valid columns, you can access values with [] (i.e. row[:account_id]).-->
    <h1><%= i.acct_first_name %> <%= i.acct_last_name %> Account Info</h1>
    
    <!--Table displays Profile Info-->
    <table>
        <tr>
            <td><strong>Email:</strong></td>
            <td><%= i.email %></td>
        </tr>
        <tr>
            <td><strong>Zipcode:</strong></td>
            <td><%= i.zipcode %></td>
        </tr>
        <tr>
            <td><strong>Join Date:</strong></td>
            <td><%= i.join_date.month %>-<%= i.join_date.day %>-<%= i.join_date.year %></td>
        </tr>
        <tr>
            <td><strong>Password:</strong></td>
            <td><%= i.password %></td>
        </tr>
    </table>
    
    <!--Edit/Delete Account Info-->
    <a href="/accounts/update/<%= i.pk %>">Edit Account</a><br>
    <a href="/accounts/change/<%= i.pk %>">Delete Account</a>
    
    <!--Link to manage students on account-->
    <h3><a href="/students/<%= i.pk %>">Manage Students</a></h3>
    
    <!--Link to manage subjects on account-->
    <h3><a href="/subjects/<%= i.pk %>">Manage Subjects</a></h3>
    
    <!--Link to Dashboard-->
    <h3><a href="/dashboard/<%= i.pk %>">My Dashboard</a></h3>

<% end %><!--End account data access-->