<!--Access account data-->

<% @account.all do |i| %>

    <!--You can read record values as object attributes if attribute names are valid columns in the dataset (i.e. row.account_id). If attribute names are not valid columns, you can access values with [] (i.e. row[:account_id]).-->
    <p class="message"><%= @message %></p>
   
    <!--Page title-->
    <h1 class="title"><%= i.acct_first_name %> <%= i.acct_last_name %> Account Info</h1>
    
    <!--Account email-->
    <div class="email">
        <span class="label">Email:</span>
        <span class="data"><%= i.email %></span>
    </div>
    
    <!--Account zipcode-->
    <div class="zipcode">
        <span class="label">Zipcode:</span>
        <span class="data"><%= i.zipcode %></span>
    </div>
    
    <!--Account join date-->
    <div class="date">
        <span class="label">Join Date:</span>
        <div class="data">
            <span class="month"><%= i.join_date.month %></span>
            <span class="day"><%= i.join_date.day %></span>
            <span class="year"><%= i.join_date.year %></span>
        </div>
    </div>
    
    <!--Account password-->
    <div class="password">
        <span class="label">Password:</span>
        <span class="data"><%= i.password %></span>
    </div>
    
    <!--Links to edit/delete account-->
    <div class="actions">
        <!--Link to edit Account Info-->
        <a class="button edit" href="/account/profile/update">Edit Account</a>
        <!--Link to delete Account-->
        <a class="button delete" href="/account/profile/change">Delete Account</a>
    </div>
    
    <!--Links to manage account students/subjects-->
    <div class="manage">
        <!--Link to manage students on account-->
        <a class="button acct_students" href="/account/students">Manage Students</a>
        <!--Link to manage subjects on account-->
        <a class="button acct_subjects" href="/subjects/manage/<%= i.account_id %>">Manage Subjects</a>
    </div>

<% end %><!--End account data access-->