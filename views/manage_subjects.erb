<!--Access account data-->
<% @account.all do |i| %>
        
    <h1 class="title">Manage Subjects:</h2>
    
    <!--List of subjects on account with Edit/Delete links-->
    <ol><% @subjects.each do |j| %>
        <li>
            <!--Subject name-->
            <span class="subject"><%= j.subject_name %></span> 
            
            <!--Link to edit subject name-->
            <a class="button edit" href="/subjects/update/<%= j.account_id %>/<%= j.subject_id %>">Edit</a> 
            
            <!--Link to delete subject-->
            <a class="button delete" href="/subjects/change/<%= j.account_id %>/<%= j.subject_id %>">Delete</a>
        </li>
        <% end %><!--End subject loop-->
    </ol>
    
    <!--Link to add new subject to account-->
    <a class="button" href="/subjects/new/<%= i.account_id %>">Add New Subject</a>
    
<% end %><!--End account data access-->